<Window x:Class="OllamaManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:converters="clr-namespace:OllamaManager.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="620" Width="900" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BytesToHumanReadableConverter x:Key="BytesToHumanReadableConverter"/>
        <converters:RunningStateToIconConverter x:Key="RunningStateToIconConverter"/>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommandAsync}" />
        </i:EventTrigger>


        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add new TextBox and Button for downloading models -->
        <Grid Grid.Row="0" Margin="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="5"
                Text="Model:" />
            <TextBox
                Grid.Column="1"
                Margin="5"
                Text="{Binding Path=ModelToDownload, Mode=TwoWay}" />
            <Button
                Grid.Column="2"
                Content="Download Model"
                Width="150"
                Height="25"
                Margin="5"
                Command="{Binding Path=DownloadModelCommandAsync}" />
        </Grid>

        <TabControl
            TabStripPlacement="Top"
            Grid.Row="1" >
            <TabItem>

                <TabItem.Header>
                    <TextBlock Margin="3">Models</TextBlock>
                </TabItem.Header>

                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid
                            Grid.Row="1"
                            Grid.Column="1"
                            IsReadOnly="True"
                            Margin="5"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Models}"
                            SelectedItem="{Binding SelectedModel}"
                            SelectionMode="Single">

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                <Setter Property="Text" Value="⭳"/>
                                                                <Setter Property="ToolTip" Value="Model is downloading"/>
                                                                <Setter Property="Foreground" Value="Blue"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                                <Setter Property="Text" Value="{Binding IsRunning, Converter={StaticResource RunningStateToIconConverter}}"/>
                                                                <Setter Property="ToolTip" Value="Model is running"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" SortDirection="Ascending"/>
                                <DataGridTemplateColumn Header="Size" Width="Auto" SortMemberPath="Size">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                <Setter Property="Text" Value="{Binding DownloadProgress, StringFormat={}{0}%}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsDownloading}" Value="False">
                                                                <Setter Property="Text" Value="{Binding Size, Converter={StaticResource BytesToHumanReadableConverter}}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Family" Binding="{Binding Details.Family}" Width="Auto"/>
                                <DataGridTextColumn Header="Parameters" Binding="{Binding Details.ParameterSize}" Width="Auto"/>
                                <DataGridTextColumn Header="Quantization" Binding="{Binding Details.QuantizationLevel}" Width="Auto"/>
                                <DataGridTextColumn Header="Usage" Binding="{Binding GpuPercent}" Width="Auto"/>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Details" Command="{Binding Path=ShowModelInfoCommandAsync}"/>
                                    <MenuItem Header="Delete" Command="{Binding Path=DeleteModelCommandAsync}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                        </DataGrid>
                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="SettingsTab">
                <TabItem.Header>
                    <TextBlock Margin="3">Settings</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- App Settings -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" FontWeight="Bold">App Settings</TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5">Ollama URL:</TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Path=OllamaUrl, Mode=TwoWay}" ToolTip="Specify the URL for the Ollama server." />

                            <Button Grid.Row="1" Grid.Column="2" Content="Test Connection" Height="25" Width="150" Margin="5" Command="{Binding Path=TestConnectionCommandAsync}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="5">Status update interval (seconds):</TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=StatusUpdateInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Set the interval for status updates in seconds." />

                            <!-- Ollama Configuration -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,20,5,5" FontWeight="Bold">Ollama Configuration</TextBlock>

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="5" ToolTip="Specify the host address for Ollama (default is 127.0.0.1:11434).">OLLAMA_HOST:</TextBlock>
                            <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding Path=OllamaHost, Mode=TwoWay}" ToolTip="Specify the host address for Ollama (default is 127.0.0.1:11434)." />

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="5" ToolTip="Define the directory for storing models.">OLLAMA_MODELS:</TextBlock>
                            <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Text="{Binding Path=OllamaModels, Mode=TwoWay}" ToolTip="Define the directory for storing models." />

                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="5" ToolTip="Configure allowed origins for cross-origin requests. If you wish to allow all browser extensions access, or specific extensions as needed: chrome-extension://*,moz-extension://*,safari-web-extension://*">OLLAMA_ORIGINS:</TextBlock>
                            <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Text="{Binding Path=OllamaOrigins, Mode=TwoWay}" ToolTip="Configure allowed origins for cross-origin requests. If you wish to allow all browser extensions access, or specific extensions as needed: chrome-extension://*,moz-extension://*,safari-web-extension://*" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="5" ToolTip="Set the size of the context window (default is 2048 tokens).">OLLAMA_CONTEXT_LENGTH:</TextBlock>
                            <TextBox Grid.Row="7" Grid.Column="1" InputScope="Number" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=OllamaContextLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Set the size of the context window (default is 2048 tokens)." />

                            <TextBlock Grid.Row="8" Grid.Column="0" Margin="5" ToolTip="Specify the duration for which models remain loaded in memory. (default: 5m)">OLLAMA_KEEP_ALIVE:</TextBlock>
                            <TextBox Grid.Row="8" Grid.Column="1" InputScope="Number" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=OllamaKeepAlive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Specify the duration for which models remain loaded in memory. (default: 5m)" />

                            <TextBlock Grid.Row="9" Grid.Column="0" Margin="5" ToolTip="Set the maximum number of queued requests (default is 512).">OLLAMA_MAX_QUEUE:</TextBlock>
                            <TextBox Grid.Row="9" Grid.Column="1" InputScope="Number" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=OllamaMaxQueue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Set the maximum number of queued requests (default is 512)." />

                            <TextBlock Grid.Row="10" Grid.Column="0" Margin="5" ToolTip="The maximum number of models that can be loaded concurrently provided they fit in available memory. The default is 3 * the number of GPUs or 3 for CPU inference.">OLLAMA_MAX_LOADED_MODELS:</TextBlock>
                            <TextBox Grid.Row="10" Grid.Column="1" InputScope="Number" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=OllamaMaxLoadedModels, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="The maximum number of models that can be loaded concurrently provided they fit in available memory. The default is 3 * the number of GPUs or 3 for CPU inference." />

                            <TextBlock Grid.Row="11" Grid.Column="0" Margin="5" ToolTip="The maximum number of parallel requests each model will process at the same time. The default will auto-select either 4 or 1 based on available memory.">OLLAMA_NUM_PARALLEL:</TextBlock>
                            <TextBox Grid.Row="11" Grid.Column="1" InputScope="Number" Margin="5" Width="100" HorizontalAlignment="Left" Text="{Binding Path=OllamaNumParallel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="The maximum number of parallel requests each model will process at the same time. The default will auto-select either 4 or 1 based on available memory." />

                            <TextBlock Grid.Row="12" Grid.Column="0" Margin="5" ToolTip="Enable Flash Attention to reduce memory usage.">OLLAMA_FLASH_ATTENTION:</TextBlock>
                            <CheckBox Grid.Row="12" Grid.Column="1" Margin="5" VerticalAlignment="Center" IsChecked="{Binding Path=OllamaFlashAttention, Mode=TwoWay}" ToolTip="Enable Flash Attention to reduce memory usage." />

                            <TextBlock Grid.Row="13" Grid.Column="0" Margin="5" ToolTip="Select the quantization type for the K/V context cache.">OLLAMA_KV_CACHE_TYPE:</TextBlock>
                            <ComboBox Grid.Row="13" Grid.Column="1" Margin="5" Width="100" HorizontalAlignment="Left" SelectedIndex="{Binding Path=OllamaKvCacheType, Mode=TwoWay}" ToolTip="Select the quantization type for the K/V context cache.">
                                <ComboBoxItem Content="f16"/>
                                <ComboBoxItem Content="q8_0"/>
                                <ComboBoxItem Content="q4_0"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="15" Grid.Column="0"  Grid.ColumnSpan="3" >
                                <Button Content="Save" Height="25" Width="150" Margin="5" Command="{Binding Path=SaveConfigCommand}"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem.Content>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Margin="5" Text="{Binding StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Margin="5" Text="{Binding OllamaVersion, Mode=OneWay}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
